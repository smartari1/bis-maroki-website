# Database - Single Production DB (used for all environments)
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/bismaroki-prod?retryWrites=true&w=majority&appName=bisMaroco
# Note: This is a small project - we use ONE production database for development and production
# Be careful with data changes during development!

# Admin Security
ADMIN_SECRET=your-strong-secret-key-here-change-this
# Used for HMAC cookie signing; rotate quarterly

# Cloudflare R2
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=bis-maroki-media
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# App Config
PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# GSAP (Premium Plugins) - Optional
GSAP_BONUS_KEY=your-club-greensock-key
# Required for SplitText, MorphSVG, Flip, InertiaPlugin

# Optional Security
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_MS=600000
ADMIN_IP_ALLOWLIST=
